{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
      "email": {
        "type": "string",
        "pattern": "^\\S+@\\S+\\.\\S+$",
        "format": "email",
        "minLength": 6,
        "maxLength": 127,
        "description": "Email of the user"
      },
      "username": {
          "type": "string"
      },
      "role": {
          "type": "string"
      }
  },
  "required": ["email"],
  "additionalProperties": false
}
